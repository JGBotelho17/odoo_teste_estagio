<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_teste_flow_bom_list" model="ir.ui.view">
        <field name="name">teste.flow.bom.list</field>
        <field name="model">mrp.bom</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="product_tmpl_id"/>
                <field name="product_qty"/>
            </list>
        </field>
    </record>

    <record id="view_teste_flow_form" model="ir.ui.view">
        <field name="name">teste.flow.form</field>
        <field name="model">teste.flow</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_analytic_account" string="Gerar Conta Analítica" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Descrição do Fluxo..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="x_studio_ca" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Componentes (BoM)" name="bom">
                            <field name="x_studio_bom_1" context="{'list_view_ref': 'joaolda.view_teste_flow_bom_list'}"/>
                        </page>
                        <page string="Milestones" name="milestones">
                            <field name="x_studio_milestones">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="deadline"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_teste_flow" model="ir.actions.act_window">
        <field name="name">Fluxo de Teste</field>
        <field name="res_model">teste.flow</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_teste_flow_root" name="TesteFlow" sequence="10"/>
    <menuitem id="menu_teste_flow_main" name="Projetos Solar" parent="menu_teste_flow_root" action="action_teste_flow" sequence="10"/>
</odoo>